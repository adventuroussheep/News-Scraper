{{!-- NavBar --}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">NPR Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/saved">Favorites</a>
      </li>
      <button type="button" class="btn btn-secondary btn-outline-success" id="scrapeArticlesButton">Scrape new Articles</button>
    </ul>
  </div>
</nav>

{{!-- JumboTron --}}
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">News Scraper</h1>
    <p class="lead">Scrape the latest news from the NPR and save your favorite articles.</p>
    <p class="lead">Please press "Scrape new Articles" to continue.</p>
  </div>
</div>


{{!-- Articles Div --}}
<div class="articleContainer">
    <div class="row">

        <div class="col-1">
        </div>

        <div class="col-10 articleColumn">
            
            {{#each articles}}

                <div class="card">
                    <div class="card-header">
                        <a class="headlineLink" href={{link}} target="_blank">{{headline}}</a>
                    </div>
                    <div class="card-body">
                        <div class="row">

                            <div class="col-10">
                                <p>{{summary}}</p>
                            </div>

                            <div class="col-2 buttonColumn">
                                <button type="button" class="btn btn-outline-warning saveArticleButton" data-id={{id}}>Favorite</button>
                            </div>
                        </div>
                    </div>
                </div>

            {{/each}}
        </div>

        <div class="col-1">
        </div>

    </div>
</div>

{{!-- Article scraped modal --}}
<div class="modal fade" id="scrapeArticlesModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title articlesScrapedTitle" >Articles Scraped</h5>
      </div>
      <div class="modal-body articlesScrapedBody">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="closeScrapeButton" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


{{!-- Modal for article favorited --}}
<div class="modal fade" id="articleSavedModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title articleSavedTitle" >Success!</h5>
      </div>
      <div class="modal-body articleSavedBody">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="closeArticleButton" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>